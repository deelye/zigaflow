<div class="z-container">
  <h1>PRODUCTS</h1>

  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>Code</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
    </tr>
    <% @products.sort.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.code %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency(product.gross, unit: "Â£") %></td>
        <td>
          <%= link_to(edit_product_path(product.id)) do %>
            <i class="far fa-edit"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

</div>
